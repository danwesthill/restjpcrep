<div id="conteudo">
<%= styled_flash %>
<h5>Configurações Gerais</h4>
<div id="abas">
	<div id='selaba'>
	<a href="/config">Geral</a>
	</div>
	<div id='nselaba'>
	<a href="/config4">Pagamentos</a>
